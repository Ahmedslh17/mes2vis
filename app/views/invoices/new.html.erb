<%# === HEADER HAUT : FIL D’ARIANE + TITRE === %>

<%# === BLOC ERREURS GLOBAL (AU DESSUS DU HEADER) === %>
<% if @invoice.errors.any? %>
  <div class="mx-auto max-w-7xl mb-6">
    <div class="rounded-3xl border border-rose-200 bg-rose-50 px-6 py-5 text-rose-800 ring-1 ring-rose-100">
      <div class="flex items-start gap-3">
        <div class="mt-0.5 h-2.5 w-2.5 rounded-full bg-rose-500"></div>
        <div class="min-w-0">
          <p class="text-sm font-semibold">Veuillez compléter les champs obligatoires.</p>
          <p class="mt-1 text-xs text-rose-700">
            Corrige les champs ci-dessous puis réessaie.
          </p>

          <ul class="mt-3 list-disc pl-5 text-xs text-rose-800 space-y-1">
            <% @invoice.errors.full_messages.uniq.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="mx-auto max-w-7xl mb-6 space-y-4">

  <!-- Fil d’Ariane -->
  <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
    <div class="text-[11px] text-slate-500">
      <%= link_to "Factures", invoices_path, class: "font-semibold text-violet-700 hover:text-fuchsia-600" %>
      <span class="mx-1">/</span>
      <span class="font-semibold text-slate-700">Nouvelle facture</span>
    </div>

    <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-[11px] font-semibold text-slate-700 ring-1 ring-slate-200">
      <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
      Création
    </span>
  </div>

  <!-- Carte titre -->
  <section class="rounded-[32px] bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.10)] overflow-hidden">
    <div class="p-6 md:p-8">
      <div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
        <div class="min-w-0">
          <div class="flex flex-wrap items-center gap-3">
            <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-slate-700 ring-1 ring-slate-200">
              <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
              Facture
            </span>
            <span class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-[11px] font-semibold text-slate-700 ring-1 ring-slate-200">
              Formulaire
            </span>
          </div>

          <h1 class="mt-4 text-2xl md:text-3xl font-semibold tracking-tight text-slate-900">
            Nouvelle facture
          </h1>
          <p class="mt-1 text-sm text-slate-600">
            Renseigne le client, les infos facture, puis ajoute les lignes.
          </p>
        </div>

        <div class="flex items-center gap-2">
          <%= link_to invoices_path,
              class: "inline-flex items-center gap-2 rounded-2xl bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-800 ring-1 ring-slate-200 hover:bg-slate-200/60 transition" do %>
            <span class="text-base leading-none">←</span>
            <span>Liste</span>
          <% end %>

          <span class="hidden md:inline-flex items-center gap-2 rounded-2xl bg-gradient-to-r from-indigo-50 via-violet-50 to-fuchsia-50 px-4 py-2 text-sm font-semibold text-violet-700 ring-1 ring-slate-200">
            <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
            Totaux auto
          </span>
        </div>
      </div>
    </div>
  </section>
</div>

<%= form_with model: @invoice, url: invoices_path, local: true, class: "mx-auto max-w-7xl space-y-6 pb-12" do |f| %>

  <%# Helpers classes (inline, sans casser ton style) %>
  <% base_input = "mt-1 w-full rounded-2xl bg-white px-3 py-2 text-sm text-slate-900 focus:outline-none focus:ring-1" %>
  <% ok_border  = "border border-slate-200 focus:border-violet-500 focus:ring-violet-500" %>
  <% err_border = "border border-rose-300 focus:border-rose-400 focus:ring-rose-300" %>
  <% err_text   = "mt-2 text-[11px] text-rose-600 font-semibold" %>

  <%# === BLOC 1 : INFORMATIONS CLIENT === %>
  <section class="rounded-3xl bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.08)] overflow-hidden"
           data-controller="client-preview"
           data-client-preview-clients-value='<%= @clients.map { |c|
             {
               id:       c.id,
               name:     c.name,
               email:    c.email,
               address:  (c.respond_to?(:address)  ? c.address  : nil),
               zip_code: (c.respond_to?(:zip_code) ? c.zip_code : nil),
               city:     (c.respond_to?(:city)     ? c.city     : nil),
               phone:    (c.respond_to?(:phone)    ? c.phone    : nil)
             }
           }.to_json %>'>

    <div class="flex items-center justify-between gap-3 border-b border-slate-200 bg-slate-50 px-6 py-4">
      <h2 class="flex items-center gap-2 text-[11px] font-semibold uppercase tracking-wide text-slate-700">
        <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
        Client
      </h2>
      <span class="inline-flex items-center gap-2 rounded-full bg-amber-50 px-3 py-1 text-[11px] font-semibold text-amber-700 ring-1 ring-amber-200">
        <span class="h-1.5 w-1.5 rounded-full bg-amber-500"></span>
        Requis
      </span>
    </div>

    <div class="grid gap-6 px-6 py-6 md:grid-cols-2">
      <div>
        <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
          Client
        </label>

        <%= f.collection_select :client_id,
                                @clients, :id, :name,
                                { prompt: "Sélectionner un client" },
                                class: "#{base_input} #{(@invoice.errors[:client_id].any? ? err_border : ok_border)}",
                                data: { client_preview_target: "select", action: "change->client-preview#change" } %>

        <% if @invoice.errors[:client_id].any? %>
          <p class="<%= err_text %>"><%= @invoice.errors[:client_id].first %></p>
        <% end %>

        <p class="mt-2 text-[11px] text-slate-500">
          Tu peux gérer les fiches dans <span class="font-semibold text-slate-700">Clients</span>.
        </p>
      </div>

      <div class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 p-4"
           data-client-preview-target="details">
        <p class="text-[11px] text-slate-500">
          Sélectionne un client pour afficher email / adresse / téléphone ici.
        </p>
      </div>
    </div>
  </section>

  <%# === BLOC 2 : INFORMATIONS FACTURE === %>
  <section class="rounded-3xl bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.08)] overflow-hidden">
    <div class="flex items-center justify-between gap-3 border-b border-slate-200 bg-slate-50 px-6 py-4">
      <h2 class="flex items-center gap-2 text-[11px] font-semibold uppercase tracking-wide text-slate-700">
        <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
        Facture
      </h2>
      <span class="inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-indigo-50 via-violet-50 to-fuchsia-50 px-3 py-1 text-[11px] font-semibold text-violet-700 ring-1 ring-slate-200">
        <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
        Numéro auto si vide
      </span>
    </div>

    <div class="grid gap-6 px-6 py-6 md:grid-cols-2">
      <div class="space-y-4">
        <div>
          <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">Numéro</label>
          <%= f.text_field :number,
                placeholder: "Laisser vide pour générer automatiquement",
                class: "#{base_input} #{(@invoice.errors[:number].any? ? err_border : ok_border)}" %>

          <% if @invoice.errors[:number].any? %>
            <p class="<%= err_text %>"><%= @invoice.errors[:number].first %></p>
          <% end %>
        </div>

        <div>
          <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">Statut</label>
          <%= f.select :status,
                [["En attente", "pending"], ["Payée", "paid"], ["En retard", "overdue"]],
                { prompt: "Choisir" },
                class: "#{base_input} #{(@invoice.errors[:status].any? ? err_border : ok_border)}" %>

          <% if @invoice.errors[:status].any? %>
            <p class="<%= err_text %>"><%= @invoice.errors[:status].first %></p>
          <% end %>
        </div>
      </div>

      <div class="space-y-4">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">Émise le</label>
            <%= f.date_field :issue_date,
                class: "#{base_input} #{(@invoice.errors[:issue_date].any? ? err_border : ok_border)}" %>

            <% if @invoice.errors[:issue_date].any? %>
              <p class="<%= err_text %>"><%= @invoice.errors[:issue_date].first %></p>
            <% end %>
          </div>

          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">Échéance</label>
            <%= f.date_field :due_date,
                class: "#{base_input} #{(@invoice.errors[:due_date].any? ? err_border : ok_border)}" %>

            <% if @invoice.errors[:due_date].any? %>
              <p class="<%= err_text %>"><%= @invoice.errors[:due_date].first %></p>
            <% end %>
          </div>
        </div>

        <div>
          <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">Conditions</label>
          <%= f.text_field :notes,
                placeholder: "Ex : Paiement à 30 jours, virement bancaire…",
                class: "#{base_input} #{(@invoice.errors[:notes].any? ? err_border : ok_border)}" %>

          <% if @invoice.errors[:notes].any? %>
            <p class="<%= err_text %>"><%= @invoice.errors[:notes].first %></p>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# === BLOC 2B : E-FACTURE (FR) === %>
  <section class="rounded-3xl bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.08)] overflow-hidden">
    <div class="flex items-center justify-between gap-3 border-b border-slate-200 bg-slate-50 px-6 py-4">
      <h2 class="flex items-center gap-2 text-[11px] font-semibold uppercase tracking-wide text-slate-700">
        <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
        E-facture (France)
      </h2>
      <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-[11px] font-semibold text-slate-700 ring-1 ring-slate-200">
        Optionnel (pour l’instant)
      </span>
    </div>

    <div class="grid gap-6 px-6 py-6 md:grid-cols-2">
      <div>
        <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
          Catégorie d’opération
        </label>

        <%= f.select :operation_category,
              [
                ["Vente de biens", "goods"],
                ["Prestation de services", "services"],
                ["Mixte (biens + services)", "mixed"]
              ],
              { prompt: "Choisir une catégorie" },
              class: "#{base_input} #{(@invoice.errors[:operation_category].any? ? err_border : ok_border)}" %>

        <% if @invoice.errors[:operation_category].any? %>
          <p class="<%= err_text %>"><%= @invoice.errors[:operation_category].first %></p>
        <% end %>

        <p class="mt-2 text-[11px] text-slate-500">
          Exemple : pour du dev web = <span class="font-semibold text-slate-700">prestation de services</span>.
        </p>
      </div>

      <div>
        <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
          Adresse de livraison / d’exécution
        </label>

        <%= f.text_area :delivery_address,
              rows: 4,
              placeholder: "Adresse où la prestation est réalisée (ou livraison). Laisse vide si pas applicable.",
              class: "#{base_input} #{(@invoice.errors[:delivery_address].any? ? err_border : ok_border)} resize-none" %>

        <% if @invoice.errors[:delivery_address].any? %>
          <p class="<%= err_text %>"><%= @invoice.errors[:delivery_address].first %></p>
        <% end %>

        <p class="mt-2 text-[11px] text-slate-500">
          Tu peux mettre l’adresse du client si c’est le lieu de la prestation.
        </p>
      </div>
    </div>
  </section>

  <%# === BLOC 3 : LIGNES DE FACTURE === %>
  <section class="rounded-3xl bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.08)] overflow-hidden"
           data-controller="invoice-items">

    <div class="flex items-center justify-between gap-3 border-b border-slate-200 bg-slate-50 px-6 py-4">
      <h2 class="flex items-center gap-2 text-[11px] font-semibold uppercase tracking-wide text-slate-700">
        <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
        Lignes
      </h2>

      <button type="button"
        data-action="click->invoice-items#add"
        class="inline-flex items-center gap-2 rounded-2xl px-4 py-2 text-xs font-semibold text-white shadow-sm transition active:scale-[0.99]
               bg-gradient-to-r from-indigo-500 via-violet-600 to-fuchsia-500 hover:brightness-110">
        <span class="text-base leading-none">＋</span>
        <span>Ajouter</span>
      </button>
    </div>

    <%# Erreurs liées aux lignes (si tu as des validations sur invoice_items) %>
    <% if @invoice.errors[:invoice_items].any? %>
      <div class="px-6 pt-5">
        <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-rose-800">
          <p class="text-xs font-semibold"><%= @invoice.errors[:invoice_items].first %></p>
        </div>
      </div>
    <% end %>

    <div class="grid gap-6 px-6 py-6 md:grid-cols-[2fr_1fr]">

      <!-- Tableau -->
      <div class="rounded-2xl border border-slate-200 overflow-hidden bg-white">
        <table class="min-w-full text-left text-xs">
          <thead class="bg-slate-100 text-slate-600">
            <tr>
              <th class="px-3 py-2 font-semibold">Description</th>
              <th class="px-3 py-2 font-semibold">Qté</th>
              <th class="px-3 py-2 font-semibold">PU (€)</th>
              <th class="px-3 py-2 font-semibold">TVA (%)</th>
              <th class="px-3 py-2 text-right"></th>
            </tr>
          </thead>

          <tbody class="text-slate-900" data-invoice-items-target="container">
            <%= f.fields_for :invoice_items do |item_form| %>
              <tr class="border-t border-slate-200 hover:bg-slate-50">
                <td class="px-3 py-2">
                  <%= item_form.text_field :description,
                        placeholder: "Service, abonnement…",
                        class: "w-full rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs
                                focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500" %>
                </td>

                <td class="px-3 py-2">
                  <%= item_form.number_field :quantity,
                        step: "0.01",
                        class: "w-20 rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs text-right
                                focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500" %>
                </td>

                <td class="px-3 py-2">
                  <%= item_form.text_field :unit_price_eur,
                        placeholder: "1200,00",
                        class: "w-24 rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs text-right
                                focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500" %>
                </td>

                <td class="px-3 py-2">
                  <%= item_form.number_field :vat_rate,
                        step: "0.01",
                        class: "w-20 rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs text-right
                                focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500" %>
                </td>

                <td class="px-3 py-2 text-right">
                  <%= item_form.hidden_field :_destroy %>
                  <button type="button"
                          data-action="click->invoice-items#remove"
                          class="text-xs font-semibold text-rose-600 hover:text-rose-800">
                    Supprimer
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Aide / Totaux -->
      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
        <div class="flex items-start justify-between gap-3">
          <div>
            <p class="text-sm font-semibold text-slate-900">Totaux</p>
            <p class="mt-1 text-xs text-slate-600">
              Calcul automatique à l’enregistrement.
            </p>
          </div>
          <span class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-[11px] font-semibold text-slate-700 ring-1 ring-slate-200">
            Auto
          </span>
        </div>

        <div class="mt-4 space-y-2 text-[11px] text-slate-600">
          <p>• Quantités décimales possibles (ex : 1,5).</p>
          <p>• TVA à 0 si non applicable.</p>
          <p>• Modifiable après création.</p>
        </div>

        <div class="mt-5 rounded-2xl bg-white ring-1 ring-slate-200 p-4">
          <p class="text-[10px] font-semibold uppercase tracking-wide text-slate-500">Astuce</p>
          <p class="mt-1 text-xs text-slate-700">
            Utilise une description courte et claire (ex : “Abonnement mensuel”).
          </p>
        </div>
      </div>

    </div>

    <!-- TEMPLATE pour nouvelle ligne -->
    <template data-invoice-items-target="template">
      <tr class="border-t border-slate-200 hover:bg-slate-50"
          data-invoice-items-target="item"
          data-new-record="true">
        <td class="px-3 py-2">
          <input type="text"
                 name="invoice[invoice_items_attributes][NEW_RECORD][description]"
                 class="w-full rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs
                        focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                 placeholder="Service, abonnement…" />
        </td>
        <td class="px-3 py-2">
          <input type="number" step="0.01"
                 name="invoice[invoice_items_attributes][NEW_RECORD][quantity]"
                 class="w-20 rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs text-right
                        focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                 placeholder="1.0" />
        </td>
        <td class="px-3 py-2">
          <input type="text"
                 name="invoice[invoice_items_attributes][NEW_RECORD][unit_price_eur]"
                 class="w-24 rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs text-right
                        focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                 placeholder="1200,00" />
        </td>
        <td class="px-3 py-2">
          <input type="number" step="0.01"
                 name="invoice[invoice_items_attributes][NEW_RECORD][vat_rate]"
                 class="w-20 rounded-xl border border-slate-200 bg-white px-2.5 py-2 text-xs text-right
                        focus:border-violet-500 focus:outline-none focus:ring-1 focus:ring-violet-500"
                 placeholder="20" />
        </td>
        <td class="px-3 py-2 text-right">
          <input type="hidden"
                 name="invoice[invoice_items_attributes][NEW_RECORD][_destroy]"
                 value="false" />
          <button type="button"
                  data-action="click->invoice-items#remove"
                  class="text-xs font-semibold text-rose-600 hover:text-rose-800">
            Supprimer
          </button>
        </td>
      </tr>
    </template>

  </section>

  <%# === BOUTONS BAS === %>
  <div class="flex flex-col-reverse gap-3 sm:flex-row sm:justify-end">
    <%= link_to "Annuler",
                invoices_path,
                class: "inline-flex items-center justify-center rounded-2xl bg-slate-100 px-5 py-2.5 text-sm font-semibold text-slate-800 ring-1 ring-slate-200 hover:bg-slate-200/60 transition" %>

    <%= f.submit "Créer la facture",
                class: "inline-flex items-center justify-center rounded-2xl px-5 py-2.5 text-sm font-semibold text-white shadow-sm cursor-pointer
                        bg-gradient-to-r from-indigo-500 via-violet-600 to-fuchsia-500 hover:brightness-110 transition active:scale-[0.99]" %>
  </div>

<% end %>
