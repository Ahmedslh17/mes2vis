  else
    [(@invoice.status || "Brouillon").capitalize, "bg-slate-100", "text-slate-700", "bg-slate-400"]
  end %>

<% status_outline =
  case @invoice.status
  when "paid" then "border-emerald-200"
  when "pending" then "border-amber-200"
  when "overdue" then "border-rose-200"
  else "border-slate-200"
  end %>

