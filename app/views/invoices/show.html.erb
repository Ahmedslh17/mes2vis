  case @invoice.status
  when "paid"
    ["Pay√©e", "bg-emerald-50", "text-emerald-700", "bg-emerald-500"]
  when "pending"
    ["En attente", "bg-amber-50", "text-amber-700", "bg-amber-500"]
  when "overdue"
