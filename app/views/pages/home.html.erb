<!-- ============================== -->
<!-- TOP BAR SOMBRE -->
<!-- ============================== -->
<div class="sticky top-0 z-50 border-b border-white/10 bg-[#0b1226]/95 backdrop-blur">
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex h-14 items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="flex h-9 w-9 items-center justify-center rounded-xl bg-gradient-to-br from-indigo-500 via-violet-600 to-fuchsia-500 text-white font-semibold shadow">
          m2
        </div>
        <span class="text-sm font-semibold tracking-tight text-white">mes2vis</span>
      </div>

      <div class="flex items-center gap-3">
        <%= link_to "Connexion", new_user_session_path,
          class: "text-sm font-medium text-slate-200 hover:text-white" %>

        <%= link_to "Créer ma facture gratuite", new_user_registration_path,
          class: "rounded-xl bg-gradient-to-br from-indigo-500 via-violet-600 to-fuchsia-500 px-4 py-2 text-sm font-semibold text-white shadow hover:opacity-95" %>
      </div>
    </div>
  </div>
</div>

<!-- ============================== -->
<!-- HERO -->
<!-- ============================== -->
<section class="relative overflow-hidden bg-white">
  <div class="pointer-events-none absolute -top-44 -left-44 h-[620px] w-[620px] rounded-full blur-[130px]"
       style="background: radial-gradient(circle, rgba(99,102,241,0.18) 0%, rgba(99,102,241,0.00) 70%);"></div>

  <div class="pointer-events-none absolute -bottom-60 -right-60 h-[720px] w-[720px] rounded-full blur-[150px]"
       style="background: radial-gradient(circle, rgba(236,72,153,0.14) 0%, rgba(236,72,153,0.00) 70%);"></div>

  <div class="max-w-6xl mx-auto px-4 py-14 md:py-20">
    <div class="grid md:grid-cols-2 gap-10 items-center">
      <div>
        <div class="flex flex-wrap gap-2">
          <span class="rounded-full border border-violet-200 bg-white/80 px-3 py-1 text-xs text-slate-700 shadow-sm">
            ✅ 1 facture gratuite
          </span>
          <span class="rounded-full border border-violet-200 bg-white/80 px-3 py-1 text-xs text-slate-700 shadow-sm">
            Sans engagement
          </span>
          <span class="rounded-full border border-violet-200 bg-white/80 px-3 py-1 text-xs text-slate-700 shadow-sm">
            Annulation en 1 clic
          </span>
        </div>

        <h1 class="mt-6 text-4xl md:text-6xl font-semibold tracking-tight text-slate-900">
          Créez une facture pro en
          <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-500 via-violet-600 to-fuchsia-500">
            30 secondes
          </span>.
        </h1>

        <p class="mt-5 text-lg text-slate-600">
          mes2vis est l’outil ultra simple pour micro-entrepreneurs et entrepreneurs :
          facturation rapide, PDF propre, envoi par email et suivi payé / non payé.
        </p>

        <div class="mt-8 flex flex-col sm:flex-row gap-3">
          <%= link_to "Créer ma facture gratuite", new_user_registration_path,
            class: "rounded-xl bg-gradient-to-br from-indigo-500 via-violet-600 to-fuchsia-500 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:opacity-95 text-center" %>

          <a href="#tarifs"
             class="rounded-xl border border-violet-200 bg-white/70 px-6 py-3 text-sm font-semibold text-slate-900 hover:bg-white text-center">
            Voir les tarifs
          </a>
        </div>

        <p class="mt-3 text-xs text-slate-500">
          Aucun paiement requis pour tester · Stripe sécurisé
        </p>
      </div>

      <div class="relative">
        <div class="absolute -inset-1 rounded-3xl bg-gradient-to-br from-indigo-200 via-violet-200 to-fuchsia-200 blur-[2px] opacity-70"></div>

        <div class="relative rounded-3xl border border-violet-200 bg-white shadow-lg p-3">
          <div class="absolute -top-3 left-5 rounded-full bg-gradient-to-br from-indigo-500 via-violet-600 to-fuchsia-500 text-white text-xs px-3 py-1 shadow">
            Aperçu
          </div>

          <%= image_tag "invoice_preview.png",
            class: "w-full rounded-2xl border",
            alt: "Aperçu mes2vis" %>
        </div>

        <p class="mt-3 text-xs text-slate-500">
          Exemple d’affichage à titre illustratif.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- ============================== -->
<!-- TARIFS -->
<!-- ============================== -->
<section id="tarifs" class="bg-white border-t border-slate-200">
  <div class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-semibold text-slate-900">
      Tarifs simples, transparents
    </h2>
    <p class="mt-2 text-slate-600">
      Commence gratuitement, puis choisis ton offre.
    </p>

    <div class="mt-10 grid md:grid-cols-2 gap-6">
      <!-- FONDATEUR -->
      <div class="rounded-3xl bg-white ring-1 ring-violet-200 shadow-lg overflow-hidden">
        <div class="h-1 bg-gradient-to-r from-indigo-500 via-violet-600 to-fuchsia-500"></div>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-slate-900">Fondateur</h3>
          <p class="text-sm text-violet-700 mt-1">200 premiers utilisateurs</p>

          <div class="mt-4">
            <span class="text-4xl font-bold text-slate-900">3,99€</span>
            <span class="text-slate-500">/ mois</span>
          </div>

          <p class="mt-2 text-xs text-slate-600">
            Sans engagement.
            Ce tarif est garanti et n’augmentera jamais pour les 200 premiers inscrits.
          </p>

          <ul class="mt-4 space-y-2 text-sm text-slate-700">
            <li>✓ Factures illimitées</li>
            <li>✓ PDF + envoi email</li>
            <li>✓ Suivi payé / non payé</li>
            <li>✓ Prioritaire sur les nouveautés</li>
          </ul>

          <div class="mt-6">
            <%= link_to "Devenir fondateur", new_user_registration_path,
              class: "block text-center rounded-xl bg-gradient-to-br from-indigo-500 via-violet-600 to-fuchsia-500 px-4 py-2.5 text-sm font-semibold text-white hover:opacity-95" %>
          </div>
        </div>
      </div>

      <!-- STANDARD -->
      <div class="rounded-3xl bg-white ring-1 ring-slate-200 shadow-lg overflow-hidden">
        <div class="h-1 bg-slate-200"></div>
        <div class="p-6">
          <h3 class="text-xl font-semibold text-slate-900">Standard</h3>
          <p class="text-sm text-slate-600 mt-1">Sans engagement</p>

          <div class="mt-4">
            <span class="text-4xl font-bold text-slate-900">8,99€</span>
            <span class="text-slate-500">/ mois</span>
          </div>

          <ul class="mt-4 space-y-2 text-sm text-slate-700">
            <li>✓ Factures illimitées</li>
            <li>✓ PDF + email</li>
            <li>✓ Support email</li>
          </ul>

          <div class="mt-6">
            <%= link_to "Choisir Standard", new_user_registration_path,
              class: "block text-center rounded-xl border border-violet-200 px-4 py-2.5 text-sm font-semibold text-slate-900 hover:bg-violet-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
