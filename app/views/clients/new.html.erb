<div class="mx-auto max-w-7xl space-y-6 pb-12">

  <!-- ================================================= -->
  <!-- HEADER -->
  <!-- ================================================= -->
  <section class="rounded-[32px] bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.10)] overflow-hidden">
    <div class="p-6 md:p-8">
      <div class="flex flex-col gap-5 md:flex-row md:items-start md:justify-between">

        <div class="min-w-0">
          <div class="flex flex-wrap items-center gap-3">
            <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-slate-700 ring-1 ring-slate-200">
              <span class="h-1.5 w-1.5 rounded-full bg-violet-600"></span>
              Clients
            </span>

            <span class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-[11px] font-semibold text-slate-700 ring-1 ring-slate-200">
              <span class="h-1.5 w-1.5 rounded-full bg-slate-400"></span>
              Nouveau
            </span>
          </div>

          <h1 class="mt-5 text-2xl md:text-3xl font-semibold tracking-tight text-slate-900">
            Nouveau client
          </h1>

          <p class="mt-1 text-sm text-slate-600">
            Enregistre un client pour créer des factures plus vite.
          </p>
        </div>

        <div class="flex flex-wrap items-center gap-2.5">
          <%= link_to clients_path,
                      class: "inline-flex items-center justify-center rounded-2xl bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-800 ring-1 ring-slate-200 hover:bg-slate-200/60 transition" do %>
            <span class="mr-2 inline-flex h-8 w-8 items-center justify-center rounded-xl bg-white ring-1 ring-slate-200">←</span>
            Retour
          <% end %>

          <span class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700 ring-1 ring-indigo-200">
            <span class="h-1.5 w-1.5 rounded-full bg-indigo-500"></span>
            Modifiable à tout moment
          </span>
        </div>

      </div>
    </div>
  </section>

  <%= form_with model: @client, url: clients_path, class: "space-y-6" do |f| %>

    <!-- ================================================= -->
    <!-- CARD FORM -->
    <!-- ================================================= -->
    <section class="rounded-3xl bg-white ring-1 ring-slate-200 shadow-[0_18px_70px_rgba(15,23,42,0.08)] overflow-hidden">
      <div class="h-1 w-full bg-gradient-to-r from-indigo-500 via-violet-600 to-fuchsia-500"></div>

      <div class="p-6 md:p-7">
        <div class="flex items-start justify-between gap-4">
          <div>
            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Informations</p>
            <h2 class="mt-1 text-lg font-semibold text-slate-900">Fiche client</h2>
            <p class="mt-1 text-xs text-slate-500">
              Mets au minimum le nom + un email pour facturer facilement.
            </p>
          </div>

          <div class="rounded-2xl bg-slate-50 ring-1 ring-slate-200 px-3 py-2 text-right">
            <p class="text-[10px] font-semibold uppercase tracking-wide text-slate-500">Conseil</p>
            <p class="mt-0.5 text-xs font-semibold text-slate-900">Email + adresse</p>
          </div>
        </div>

        <div class="mt-6 grid gap-5 md:grid-cols-2">

          <!-- Nom (important) -->
          <div class="md:col-span-2">
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Nom de l’entreprise / client
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :name,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "Entreprise Dupont" %>
            </div>
            <p class="mt-1 text-[11px] text-slate-500">
              Ce nom apparaîtra sur tes factures.
            </p>
          </div>

          <!-- Contact -->
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Nom du contact
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :contact_name,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "Jean Dupont" %>
            </div>
          </div>

          <!-- Email -->
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Email
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.email_field :email,
                                class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                                placeholder: "contact@entreprise.fr" %>
            </div>
          </div>

          <!-- Téléphone -->
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Téléphone
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.telephone_field :phone,
                                    class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                                    placeholder: "+33 6 12 34 56 78" %>
            </div>
          </div>

          <!-- TVA -->
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              N° TVA (optionnel)
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :vat_number,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "FR12345678901" %>
            </div>
          </div>

          <!-- Adresse -->
          <div class="md:col-span-2">
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Adresse
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :address,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "12 Rue de la Paix" %>
            </div>
          </div>

          <!-- CP -->
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Code postal
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :zip_code,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "75010" %>
            </div>
          </div>

          <!-- Ville -->
          <div>
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Ville
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :city,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "Paris" %>
            </div>
          </div>

          <!-- Pays -->
          <div class="md:col-span-2">
            <label class="text-[11px] font-semibold uppercase tracking-wide text-slate-500">
              Pays
            </label>
            <div class="mt-1 rounded-2xl border border-slate-200 bg-white px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-violet-500">
              <%= f.text_field :country,
                               class: "w-full border-none bg-transparent text-sm text-slate-900 placeholder-slate-400 focus:ring-0",
                               placeholder: "France" %>
            </div>
          </div>

        </div>

        <div class="mt-7 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
          <div class="rounded-2xl bg-slate-50 ring-1 ring-slate-200 px-4 py-3 text-xs text-slate-600">
            <p class="font-semibold text-slate-900">Astuce</p>
            <p class="mt-1">
              Mets une adresse + code postal : ça rend tes factures plus “pro” et évite les oublis.
            </p>
          </div>

          <div class="flex justify-end gap-3">
            <%= link_to "Annuler",
                        clients_path,
                        class: "rounded-2xl bg-slate-100 px-5 py-2.5 text-sm font-semibold text-slate-800 ring-1 ring-slate-200 hover:bg-slate-200/60 transition" %>

            <%= f.submit "Enregistrer",
                         class: "rounded-2xl px-5 py-2.5 text-sm font-semibold text-white shadow-sm cursor-pointer
                                 bg-gradient-to-r from-indigo-500 via-violet-600 to-fuchsia-500 hover:brightness-110 transition" %>
          </div>
        </div>

      </div>
    </section>

  <% end %>

</div>
