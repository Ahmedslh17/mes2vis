<div class="min-h-screen flex flex-col items-center justify-center bg-slate-50 py-10 px-4">

  <!-- Carte principale -->
  <div class="w-full max-w-md bg-white rounded-3xl shadow-lg border border-slate-200 p-8">

    <h1 class="text-2xl font-bold text-slate-900 mb-2 text-center">
      Confirmation de votre e-mail
    </h1>

    <p class="text-sm text-slate-600 text-center mb-6">
      Entrez votre adresse e-mail pour recevoir un nouveau lien de confirmation.
    </p>

    <% if resource.errors.any? %>
      <div class="mb-4 bg-rose-50 text-rose-700 border border-rose-200 rounded-xl p-4 text-sm">
        <p class="font-semibold mb-2">Une erreur est survenue :</p>
        <ul class="list-disc ml-5">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource,
                 as: resource_name,
                 url: confirmation_path(resource_name),
                 html: { method: :post, class: "space-y-4" }) do |f| %>

      <div>
        <%= f.label :email, "Adresse e-mail", class: "block text-sm font-medium text-slate-700" %>
        <%= f.email_field :email,
              autofocus: true,
              value: resource.email,
              class: "mt-1 w-full rounded-xl border-slate-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.submit "Renvoyer l’e-mail de confirmation",
              class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-xl shadow-sm transition cursor-pointer" %>
      </div>

    <% end %>

    <div class="mt-6 text-center space-y-2 text-sm">
      <%= link_to "Se connecter", new_user_session_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %><br>
      <%= link_to "Créer un compte", new_user_registration_path, class: "text-indigo-600 hover:text-indigo-700" %><br>
      <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "text-indigo-600 hover:text-indigo-700" %>
    </div>

  </div>

  <!-- Footer -->
  <footer class="mt-10 text-center text-[11px] text-slate-400">
    m2 · mes2vis<br>
    © 2025 Mes2Vis — Tous droits réservés
  </footer>

</div>
